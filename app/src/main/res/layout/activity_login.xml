<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".view.activity.ActivityLogin">

    <com.example.moneycounter4.view.costom.ZEditText
        android:id="@+id/edittextLoginUserId"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_et_shape"
        android:inputType="textVisiblePassword"
        android:textSize="24sp"
        android:transitionName="et1"
        app:hintText="请输入手机号"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <com.example.moneycounter4.view.costom.ZEditText
        android:id="@+id/edittextLoginPassword"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_et_shape"
        android:inputType="textPassword"
        android:textSize="24sp"
        android:transitionName="et2"
        app:hintText="请输入密码"
        app:layout_constraintEnd_toEndOf="@+id/edittextLoginUserId"
        app:layout_constraintStart_toStartOf="@+id/edittextLoginUserId"
        app:layout_constraintTop_toBottomOf="@+id/edittextLoginUserId" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_text_main"
        android:textColor="@color/appbar_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="手机号注册"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="@+id/edittextLoginPassword"
        app:layout_constraintTop_toBottomOf="@+id/floatLoginLogin" />

    <com.example.moneycounter4.view.costom.RoundedImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:transitionName="logo"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:left_bottom_corner="10dp"
        app:left_top_corner="10dp"
        app:right_bottom_corner="10dp"
        app:right_top_corner="10dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/floatLoginLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_yellow_button2"
        android:elevation="29dp"
        android:text="登 录"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextLoginPassword" />

    <View
        android:id="@+id/view2"
        android:layout_width="310dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#777777"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRegister" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="第三方账号登录"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

</androidx.constraintlayout.widget.ConstraintLayout>